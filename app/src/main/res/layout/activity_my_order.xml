<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4">
   <ScrollView xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       xmlns:android="http://schemas.android.com/apk/res/android">
      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Order id"
             android:id="@+id/textView2"
             android:layout_alignParentStart="true" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Destination:"
             android:id="@+id/textView7"
             android:layout_alignBaseline="@+id/textView9"
             android:layout_alignBottom="@+id/textView9"
             android:layout_alignParentStart="true"
             android:layout_marginStart="197dp">

         </TextView>


         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Payment By:"
             android:padding="8dp"
             android:layout_marginTop="515dp"
             android:id="@+id/textView13"></TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Order Name"
             android:id="@+id/textView3"
             android:layout_marginTop="33dp"
             android:layout_below="@+id/textView2"
             android:layout_alignParentStart="true"></TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Orderer On:"
             android:id="@+id/textView4"
             android:layout_marginTop="28dp"
             android:layout_below="@+id/textView3"
             android:layout_alignParentStart="true"></TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Service Name:"
             android:id="@+id/textView5"
             android:layout_marginTop="35dp"
             android:layout_below="@+id/textView4"
             android:layout_alignParentStart="true"></TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Service Type:"
             android:id="@+id/textView6"
             android:layout_marginTop="42dp"
             android:layout_below="@+id/textView5"
             android:layout_alignParentStart="true"></TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Source:"
             android:id="@+id/textView9"
             android:layout_marginTop="39dp"
             android:layout_below="@+id/textView6"
             android:layout_alignParentStart="true" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Payment Rs.:"
             android:id="@+id/textView14"
             android:layout_below="@+id/textView13"
             android:layout_alignParentStart="true">
         </TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Replacement Days:"
             android:id="@+id/textView8"
             android:layout_marginTop="24dp"
             android:layout_below="@+id/textView12"
             android:layout_alignParentStart="true">
         </TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Size:"
             android:layout_marginTop="33dp"
             android:id="@+id/textView12"
             android:layout_below="@+id/textView7"
             android:layout_alignParentStart="true" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Delivered On:"
             android:id="@+id/textView10"
             android:layout_marginTop="11dp"
             android:layout_below="@+id/textView11"
             android:layout_alignParentStart="true">
         </TextView>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:text="Delivery Type:"
             android:id="@+id/textView11"
             android:layout_marginTop="19dp"
             android:layout_below="@+id/textView8"
             android:layout_alignParentStart="true"></TextView>


      </RelativeLayout >
   </ScrollView>
</RelativeLayout >






